<h1>Listing Hosts</h1>

<table>
  <tr>
    <th>Host Id</th>
    <th>Host Name</th>
    <th>Host Address</th>
  </tr>

<% @hosts.each do |host| %>
  <tr>
    <td><%=h host.id %></td>
    <td><%=h host.name %></td>
    <td><%=h host.address %></td>
    <td><%= link_to 'Edit', edit_host_path(host) %></td>
    <td><%= link_to 'Destroy', host, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

